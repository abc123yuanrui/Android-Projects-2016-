<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
   
    
    <item android:state_pressed="true" >
        <shape>
            <solid android:color="#ff0000ff" />
            <corners android:radius="30.0dip" />
            <stroke android:width="1.0dip" android:color="#ff787878" />
        </shape>
    </item>
    <item android:state_focused="true" android:drawable="@color/on">
        <shape
          xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#ff0000ff" />
            <corners android:radius="30.0dip" />
            <stroke android:width="1.0dip" android:color="#ff787878" />
        </shape>
    </item>
    
    <item android:state_checked="true">
       <shape
          xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#ff00ff00" />
            <corners android:radius="30.0dip" />
            <stroke android:width="3.0dip" android:color="#ff323232" />
        </shape>       
    </item>
    <item android:state_checked="false">
                <shape
          xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#ff007700" />
            <corners android:radius="30.0dip" />
            <stroke android:width="3.0dip" android:color="#ff323232" />
        </shape>       
    </item>
    <item android:state_pressed="false">
        <shape >
            <solid android:color="#ff989898" />
            <corners android:radius="30.0dip" />
            <stroke android:width="3.0dip" android:color="#ffffffff" />
        </shape>
    </item>
    <item android:state_pressed="false"  android:drawable="@color/pressed">
        <shape
          xmlns:android="http://schemas.android.com/apk/res/android">
            <solid android:color="#ff989898" />
            <corners android:radius="30.0dip" />
            <stroke android:width="3.0dip" android:color="#ffffffff" />
        </shape>
    </item>
 </selector>
